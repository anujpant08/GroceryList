<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/background_off_white">

    <CheckBox
        android:id="@+id/final_popup_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

    </CheckBox>

    <TextView
        android:id="@+id/final_child_item_name"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/final_popup_check_box"
        android:fontFamily="@font/cabin_bold"
        android:gravity="center_vertical"
        android:text="Sample"
        android:textColor="@color/secondary"
        android:textSize="16sp">

    </TextView>
    <TextView
        android:id="@+id/final_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/final_popup_check_box"
        android:layout_below="@id/final_child_item_name"
        android:fontFamily="@font/cabin"
        android:gravity="center_vertical"
        android:text="Sample"
        android:textColor="@color/secondary"
        android:textSize="16sp">

    </TextView>

</RelativeLayout>